{{template "base" .}}
{{define "content"}}
    {{$res := index .Data "reservation"}}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mt-5">Reservation Summary</h1>
                <hr>

                <table class="table table-striped table-bordered">
                    <thead>
                    </thead>
                    <tbody>
                        <tr>
                            <td>First Name</td>
                            <td>{{$res.FirstName}}</td>
                        </tr>
                        <tr>
                            <td>Last Name</td>
                            <td>{{$res.LastName}}</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>{{$res.Email}}</td>
                        </tr>
                        <tr>
                            <td>Phone</td>
                            <td>{{$res.Phone}}</td>
                        </tr>
                    </tbody>
            </div>
        </div>
    </div>
    <hr>
{{end}}